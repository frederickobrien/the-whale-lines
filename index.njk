<main>

  <div class="articles-container">

  {% set latest_posts = collections.news | reverse %}
  {% for post in latest_posts.slice(0,10) %}

      <article class="news-story" style="transform: rotate({{ post.data.angle }}deg);">

        <h2><a href=" {{ post.url }} ">{{ post.data.title }}</a></h2>

        {% if post.data.image %}

          <figure>
            <img class="story-image" src="{{ post.data.image }}" alt="{{ psot.data.imageAlt }}">
            <figcaption>{{ post.data.imageCaption }}</figcaption>
          </figure>

        {% endif %}

        <div class="story-copy">

        {{ post.templateContent | safe }}

        </div>

        <p class="story-date"><date>{{ post.date.toDateString() }}</date></p>

