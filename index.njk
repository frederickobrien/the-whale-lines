---

layout: base.njk
title: Home
description: Real fake news.

---
 
 <div class="articles-container">

    {% set latest_posts = collections.news | reverse %}

    {% for post in latest_posts.slice(0, 10) %}

      <article class="news-story" style="transform: rotate({{ post.data.angle }}deg);">

        <h2>
          <a href=" {{ post.url }} ">{{ post.data.title }}</a>
        </h2>

        {% if post.data.image %}

          <figure>
            <img class="story-image" src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}">
            <figcaption>{{ post.data.imageCaption }}</figcaption>
          </figure>

        {% endif %}

        <div class="story-copy">

          {{ post.templateContent | safe }}

        </div>

        <p class="story-date">
          <date>{{ post.date.toDateString() }}</date>
        </p>

        <a class="twitter-share-button" target="_blank"
  href="https://twitter.com/intent/tweet?text={{post.data.title}}&url=https://thewhalelines.com{{post.url}}">
          <img class="twitter-icon" alt="Black Twitter icon" src="/images/brand-images/twitter-icon.png">
        </a>

      </article>

    {%- endfor -%}

    <div class="more-posts">
      <p>
        <a href="{{ '/news/' | url }}">See all stories</a> ‚áÅ</p>
    </div>
  
  </div>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "The Whale-Lines",
        "description": "A fake news paper.",
        "url": "https://thewhalelines.com",
        "logo": "https://thewhalelines.com/images/brand-images/full-logo.png/"
      }
    </script>
