---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
---

<header>
  <a href="/">
    <img
      src="/images/brand-images/full-logo.png"
      alt={`Logo for ${SITE_TITLE}`}
      class="site-logo"
    />
  </a>
  <nav>
    <HeaderLink href="/news">News</HeaderLink>
    <HeaderLink href="/letters">Letters from the Editor</HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
  .site-logo {
    display: block;
    margin-right: auto;
    margin-left: auto;
    margin-top: 40px;
    margin-bottom: 20px;
    width: 20%;
    opacity: 0.7;
  }
  .site-logo:hover {
    opacity: 0.2;
  }
  nav {
    text-transform: uppercase;
    text-align: center;
  }
</style>
